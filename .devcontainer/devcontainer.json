{
  "name": "Vaca Muerta Intelligence Env",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bookworm",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "app.py",
        "README.md"
      ]
    },
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter" 
      ]
    }
  },
  "updateContentCommand": "sudo apt-get update && sudo apt-get install -y libgdal-dev gdal-bin && pip3 install --user -r requirements.txt && echo 'âœ… Environment Ready!'",
  "postAttachCommand": {
    "server": "streamlit run app.py --server.enableCORS false --server.enableXsrfProtection false"
  },
  "portsAttributes": {
    "8501": {
      "label": "Streamlit App",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [
    8501
  ]
}